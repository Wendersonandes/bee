      <%= render 'projects', posts: @posts %>
    <% else %>
        <% if @user == current_user %>
         <h2 class="w3-center">VocÃª ainda nao possui projetos</h2>
         <h3 class="w3-center"> Para postar, <%=link_to "clique aqui", new_post_path%>
        <% else %>
            <h2 class="w3-center"><%= @user.completo%> ainda nao possui projetos</h2>
        <% end %>
    <% end %>
    </div>
  </div>
  <!-- Pagination -->
  <div id="infinite-scrolling" class="w3-center">
