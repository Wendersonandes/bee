<div class="login-bg">
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Mudar sua senha</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name) , html: { method: :put }) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :reset_password_token, as: :hidden%>
              <%= f.full_error :reset_password_token%>
              <%= f.input :password, placeholder: "Nova Senha",label:false, required: true, input_html: { class: 'input-lg' }, autofocus: true%>
              <%= f.input :password_confirmation, placeholder: "Confirme a Senha",label:false,input_html: { class: 'input-lg' }, required: true%>
              <%= f.button :submit, "Mudar Senha", class: 'btn-lg btn-info btn-block' %>
            </div>
          <% end %>
              <div style='padding:0px 15px 15px 15px; width:100%'>
                <%= render "devise/shared/links"%>
              </div>
        </div>
      </div>
    </div>
  </div>
</div>