<a href=<%=link_through_path(notification)%> class="w3-center" style= "background-color:#bfbfbf">
	<%if notification.read == true %>
		<div class='row well' style='border: 1px solid #d2d2d2;margin:auto'>
	<%else%>
		<div class='row well' style='border: 1px solid white;margin:auto'>
	<%end%>
	    <span class="col-md-2">
	    <%= image_tag notification.notified_by.avatar.url(:medium), class: "media-object img-circle img-notification",style:'width:32px;height:32px'%>
	    </span>
	    <span style="width:75%; text-align:left;padding-top:8px;vertical-align: middle;border: 0px solid black;text-transform:capitalize;margin:0px;">
	        <p style='margin-bottom:5px; color:#009FAB;'><%=notification.notice_type%></p>
	    	<small class="text-muted"><%= time_ago_in_words notification.created_at%></small>
	    </span>
	</div>
</a>