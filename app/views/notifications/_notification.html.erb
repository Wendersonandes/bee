<%if notification.read == true %>
	<a href=<%=link_through_path(notification)%> class="media list-group-item" style= "background-color:#bfbfbf">
<% else %>
	<a href=<%=link_through_path(notification)%> class="media list-group-item">
<% end %>
    <span class="pull-left">
    <%= image_tag notification.notified_by.avatar.url(:medium), class: "media-object img-circle img-notification"%>
    </span>
    <span class="media-body">
        <p><%=notification.notified_by.name%> <%=notification.notified_by.sobrenome%> has <%=notification.notice_type%>ed on your post.</p>
    	<small class="text-muted"><%= time_ago_in_words notification.created_at%></small>
    </span>
</a>