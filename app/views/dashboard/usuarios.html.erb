 <%= render 'dashboard/navs'%>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Usuários (<%= @users.count%>)</h4>
                                <p class="category">Encontre aqui as principais informações</p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-hover table-striped" style="margin-bottom:0px">
                                    <thead>
                                        <th>ID</th>
                                    	<th>Nome</th>
                                    	<th>Email</th>
                                    	<th>Projetos</th>
                                    	<th>Carrinhos</th>
                                        <th>Compras</th>
                                    </thead>
                                    <tbody>
                                    <% @users.each do |user|%>
                                        <tr>
                                        	<td>
                                             <%=user.id%>
                                                
                                            </td>
                                        	<td>
                                            <a href=<%= profile_path(user.user_name)%>><%=user.completo%></a>
                                                
                                            </td>

                                        	<td><%=user.email%></td>
                                            <td><%=user.posts.count%></td>
                                        	<td><%=user.carrinhos.count%></td>
                                        	<td><%=user.carrinhos.where(status: 'Pago').count%></td>

                                        </tr>
                                    <%end%>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>




                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="#">
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Company
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Portfolio
                            </a>
                        </li>
                        <li>
                            <a href="#">
                               Blog
                            </a>
                        </li>
                    </ul>
                </nav>
                <p class="copyright pull-right">
                    &copy; <script>document.write(new Date().getFullYear())</script> <a href=<%=root_path%>>BeePrinted</a>, Imprima em Comunidade
                </p>
            </div>
        </footer>


    </div>
</div>


</body>