%h2 Forgot your password?
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true
  .form-actions
    = f.button :submit, "Send me reset password instructions"
= render "devise/shared/links"
<div class="login-bg">
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Esqueceu sua senha?</h2>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name) , html: { method: :post }) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-lg' } %>
              <%= f.button :submit, "Enviar email para trocar senha", class: 'btn-lg btn-info btn-block' %>
            </div>
          <% end %>
              <div style='padding:0px 15px 15px 15px; width:100%'>
                <%= render "devise/shared/links"%>
              </div>
        </div>
      </div>
    </div>
  </div>
</div>