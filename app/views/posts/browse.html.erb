<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
html,body,h1,h2,h3,h4,h5 {font-family: "Open Sans", sans-serif}

#bleee{
  border-radius: 4px;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important;
}
.user-name > a{
  color: #6441a4;
  font-weight: bold;
}

.thumbnail {
  position: relative;
  width: 100%;
  height: 90px;
  overflow: hidden;
}
.thumbnail img {
  position: absolute;
  left: 50%;
  top: 50%;
  height: 100%;
  width: auto;
  -webkit-transform: translate(-50%,-50%);
      -ms-transform: translate(-50%,-50%);
          transform: translate(-50%,-50%);
}
.thumbnail img.portrait {
  width: 100%;
  height: auto;
}
.w3-buttom, .w3-btn-block{
background-color: #6441a4;
}
.like-button a{
  color: #6441a4 !important;
}

.post-bottom .user-name {
  font-weight: bold;
  color: #F05F40;
  font-size: 15px;
}


</style>
<body class="w3-theme-l5">

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">   
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
    <div class="w3-col m3" style="">
      <!-- Profile -->
      <div class="w3-card-2 w3-round w3-white" style="border: 1px solid#6441a4;">
        <div class="w3-container" style="padding-left: 0px;padding-right: 0px;">
         <h4 class="w3-center" style="font-weight: bold;text-transform: capitalize;"><%=current_user.completo%></h4>


         <p class="w3-center">
            <%= link_to (image_tag current_user.avatar.url(:medium),class: "w3-circle", style: 'height:106px;width:106px'), profile_path(current_user.user_name) %>
         </p>
         <br>
         <div style="padding-left: 16px;">
         <% if current_user.prof && current_user.prof != "" %>
          <p><i class="fa fa-pencil fa-fw w3-margin-right w3-text-theme"></i><%=current_user.prof %></p>
         <%end%>
         <% if current_user.city && current_user.city != "" %>
         <p><i class="fa fa-home fa-fw w3-margin-right w3-text-theme"></i><%=current_user.city%></p>
         <%end%>
         <% if current_user.niver && current_user.niver != "" %>
         <p><i class="fa fa-birthday-cake fa-fw w3-margin-right w3-text-theme"></i><%=current_user.niver%></p>
         <%end%>
         </div>


        <div class="">
          <a href=''><button onclick="myFunction('Demo1')" class="w3-btn-block w3-theme-l1 w3-left-align"><%=current_user.followers.count-1%> Seguidores</button></a>
          <a href=''><button onclick="myFunction('Demo2')" class="w3-btn-block w3-theme-l1 w3-left-align"><%=current_user.following.count-1%> Seguindo</button></a>
          <a href=<%=new_printer_path%>><button onclick="myFunction('Demo3')" class="w3-btn-block w3-theme-l1 w3-left-align"><%=current_user.view%> Visualizações do Perfil</button></a>
        </div>  






        </div>
      </div>
       <br>
      
      <!-- Accordion 

      <div class="w3-card-2 w3-round" style="border: 1px solid#6441a4;">
        <div class="">
          <a href=''><button onclick="myFunction('Demo1')" class="w3-btn-block w3-theme-l1 w3-left-align"><%=current_user.followers.count-1%> Seguidores</button></a>
          <a href=''><button onclick="myFunction('Demo2')" class="w3-btn-block w3-theme-l1 w3-left-align"><%=current_user.following.count-1%> Seguindo</button></a>
          <a href=<%=new_printer_path%>><button onclick="myFunction('Demo3')" class="w3-btn-block w3-theme-l1 w3-left-align"><%=current_user.view%> Visualizações do Perfil</button></a>
        </div>      
      </div>
      <br>
      -->
      
      <!-- Interests --> 
      <div class="w3-card-2 w3-round w3-white w3-hide-small" style="">
        <div class="w3-container">
          <p class="w3-center" style="font-weight: bold;">Quer um projeto personalizado?</p>
          <hr style="margin:2px;">
          <p class="w3-center">Clique aqui e envie sua idéia para um de nossos modeladores.</p>
          <a href=<%=pedidos_path%>>Peça aqui!</a>
        
        </div>
      </div>
      <br>
      
      <!-- Alert Box -->
      <div class="w3-container w3-round w3-theme-l4 w3-border w3-theme-border w3-margin-bottom w3-hide-small" style="">

           <p style="font-weight: bold;">Outros projetos:</p>

                          <div class="wrapper" id="outrosprojetos">
                            <div class="scroll" id="scrolloutros">
                                <div id="imgs">
                                        <% @footers.each do |item| %>
                                            <%= link_to (image_tag item.image.url(:medium),{:style=>'box-shadow: 1px 1px 10px #999; margin: 2px;height:8%;      cursor: pointer;       display:inline-block;        *display:inline;        *zoom:1;        vertical-align:top; padding: 0px;', :class =>"w3-hover-opacity"}), post_path(item) %>
                                <% end %>
                                </div>
                            </div>
                            </div>


      </div>



    
    <!-- End Left Column -->






    </div>
    
    <!-- Middle Column -->
    <div class="w3-col m7 w3-row ">
    
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card-2 w3-round w3-white">
            <div class="w3-container w3-padding">
              <div class="w3-left">
              <h5 class="w3-opacity">Poste seus projetos e ajude a comunidade Bee
              </h5>
              </div>
              <div class="w3-right">
              <a href=<%= new_post_path %>>
              <button type="button" class="w3-btn-block w3-theme"><i class="fa fa-pencil"></i>  Postar</button> 
              </a>
              </div>

            </div>
            <hr style="margin:0px; border-top:1px solid #dddddd">
            <div class="w3-container w3-padding">
              <div class="w3-left">
              <h5 class="w3-opacity">Imprima seu projeto sem precisar postá-lo
              </h5>
              </div>
              <div class="w3-right">
              <a href=<%= importar_path %>>
              <button type="button" class="w3-btn-block w3-theme"><i class="fa fa-upload"></i>  Importar</button> 
              </a>
              </div>

            </div>


          </div>
        </div>
      </div>


      <div>

      <div id='olar'>
        <%= render 'post_dashboard', posts: @posts %>
      </div>
      <div id="infinite-scrolling">
           <%= will_paginate @posts%>
      </div>

      </div>


      
      
      
    <!-- End Middle Column -->
    </div>
    
    <!-- Right Column -->
    <div class="w3-col m2">
      <div class="w3-card-2 w3-round w3-white w3-center">
        <div class="w3-container">



                    <p style="font-weight: bold;">Sugestões para você:</p>
                    
                        <% @sugestoes.each do |item| %>
                                <a href=<%=profile_path(item.user_name)%> class="media list-group-item" id="bleee">
                                   <span class="pull-left">
                                   <%= image_tag item.avatar.url(:medium), class: "media-object img-circle img-notification"%>
                                   </span>
                                   <span class="media-body" style="">
                                       <div>
                                       <h4 style="font-weight:bold;position: relative;font-size: 15px;text-transform: capitalize;">
                                      <%= item.name %>
                                       
                                       </h4>
                                       </div>
                                       <% if item.seguidores == 1 %>
                                          <p ><%= item.seguidores%> Seguidor</p>
                                       <% else %>
                                          <p ><%= item.seguidores%> Seguidores</p>
                                        <% end %>

                                   </span>
                                </a>
                            <% end %>
                            <br>

        </div>
      </div>
      <br>
      
      <div class="w3-card-2 w3-round w3-white w3-center">
        <div class="w3-container">
          <p style="font-weight: bold;">Confira nossos tutoriais sobre:</p>
          
          <p>Acabamento</p>
          <a href=<%=learn_acabamento_path%>>
          <div class="media list-group-item thumbnail w3-hover-opacity" style="border-radius:4px;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important;margin: 0px; padding: 0px;  ">
          <img src="../images/elderwand4.jpg" class="img-responsive portrait" style="" alt="Image">
            
          </div>
          </a>
          
          <br>

          <p>Primeira impressão</p>
          <a href=<%=learn_primeira_path%>>
          <div class="media list-group-item thumbnail w3-hover-opacity" style="border-radius:4px;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important;margin: 0px; padding: 0px;  ">
          <img src="../images/elderwand2.jpg" class="img-responsive portrait" style=" " alt="Image">
            
          </div>
          </a>
          <br>

          <p>Top Sites</p>
          <a href=<%=learn_modelagem_path%>>
          <div class="media list-group-item thumbnail w3-hover-opacity" style="border-radius:4px;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important;margin: 0px; padding: 0px;  ">
          <img src="../images/thingiverse.jpg" class="img-responsive portrait" style=" " alt="Image">
            
          </div>
          </a>
          <br>

          <p>ABS ou PLA?</p>
          <a href=<%=learn_material_path%>>
          <div class="media list-group-item thumbnail w3-hover-opacity" style="border-radius:4px;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important;margin: 0px; padding: 0px;  ">
          <img src="../images/varinha3.jpg" class="img-responsive portrait" style=" " alt="Image">
            
          </div>
         </a>
          <br>
        </div>
      </div>
      <br>
      
      <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
          <h4 class="w3-center">Entre em contato</h4>
          <hr style="margin:2px;">
          <p class="w3-center">contato@beeprinted.com.br</p>

        
      </div>
      <br>

      
    <!-- End Right Column -->
    </div>
    
  <!-- End Grid -->
  </div>
  
<!-- End Page Container -->
</div>


 
<script>
// Accordion
function myFunction(id) {
    var x = document.getElementById(id);
    if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
        x.previousElementSibling.className += " w3-theme-d1";
    } else { 
        x.className = x.className.replace("w3-show", "");
        x.previousElementSibling.className = 
        x.previousElementSibling.className.replace(" w3-theme-d1", "");
    }
}

// Used to toggle the menu on smaller screens when clicking on the menu button
function openNav() {
    var x = document.getElementById("navDemo");
    if (x.className.indexOf("w3-show") == -1) {
        x.className += " w3-show";
    } else { 
        x.className = x.className.replace(" w3-show", "");
    }
}
</script>

</body>
