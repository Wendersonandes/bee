<% posts.each do |post| %>
<article class="white-panel">
      <div class="img-box">
        <a href=<%=post_path(post)%>><div class="hover-mask2"></div></a>
        <span class="product-icon fa fa-print" style="display:inline;"></span>
        <%= link_to (image_tag post.image.url(:medium)), post_path(post) %>
      </div>
        <div class="product-info col-md-12">
          <p class="project-price">R$<%=%></p>
          <div>
           <h4 class="project-title"><%=post.caption%></h4>
          </div>
        </div>
    </article>
<% end %>